# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_super_secret_key
JWT_EXPIRES_IN=7d

# Database Configuration
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/fingenius?retryWrites=true&w=majority
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/fingenius

# Redis Configuration
REDIS_URL=https://<your-upstash-url>.upstash.io
REDIS_TOKEN=<your-upstash-token>
REDIS_URL_PROD=redis://username:password@redis-server:6379

# AI/ML Configuration
TENSORFLOW_MODEL_PATH=./models
ML_SERVICE_ENABLED=true
ANOMALY_DETECTION_THRESHOLD=0.95

# Blockchain & Crypto Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Exchange API Keys (Optional)
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_SECRET_KEY=your-kraken-secret-key

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
NEWS_API_KEY=your-news-api-key
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@fingenius.app

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Cache Configuration
CACHE_TTL=3600
SESSION_TTL=86400

# Feature Flags
ENABLE_CRYPTO_TRADING=true
ENABLE_AI_INSIGHTS=true
ENABLE_FRAUD_DETECTION=true
ENABLE_VOICE_COMMANDS=false
ENABLE_SOCIAL_FEATURES=false

# Development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_MOCK_DATA=true 